# Blend.Web — Environment Variables
# Copy this file to .env.local and populate values for local development.
# NEVER commit .env.local to source control.

# ── API ───────────────────────────────────────────────────────────────────────
# URL of the Blend.Api backend
NEXT_PUBLIC_API_URL=http://localhost:8080

# ── Azure Static Web Apps ─────────────────────────────────────────────────────
# The SWA API token is used in CI/CD — do not set locally
# AZURE_STATIC_WEB_APPS_API_TOKEN=<token>

# ── Authentication ────────────────────────────────────────────────────────────
NEXT_PUBLIC_AAD_CLIENT_ID=<your-client-id>
NEXT_PUBLIC_AAD_TENANT_ID=<your-tenant-id>
NEXT_PUBLIC_AAD_REDIRECT_URI=http://localhost:3000

# ── Feature Flags ─────────────────────────────────────────────────────────────
NEXT_PUBLIC_ENABLE_COOK_MODE=true
NEXT_PUBLIC_ENABLE_FRIENDS=true
